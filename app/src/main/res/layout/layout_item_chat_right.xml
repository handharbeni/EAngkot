<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatRight" android:visibility="gone"
    android:layout_marginStart="180dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <ImageView
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/ivPhotoRight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/ic_launcher_round"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/ivPhotoRight"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="end"
                android:gravity="end"
                android:id="@+id/tvNamaRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anda"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_gravity="end"
                android:gravity="end"
                android:id="@+id/tvMessageRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_gravity="end"
                android:gravity="end"
                android:id="@+id/tvTimeRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:45 AM"
                android:textSize="10sp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>